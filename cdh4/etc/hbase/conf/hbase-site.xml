<?xml version="1.0"?>
{% set nn_host = salt['publish.publish']('roles:cdh4.hadoop.namenode', 'grains.get', 'fqdn', 'grain').values()[0] %}
{% set master_host = salt['publish.publish']('roles:cdh4.hbase.master', 'grains.get', 'fqdn', 'grain').values()[0] %}
<configuration>
    <property>
        <name>hbase.zookeeper.quorum</name>
        <value>{{ master_host }}</value>
    </property>
    <property>
        <name>hbase.rootdir</name>
        <value>hdfs://{{ nn_host }}:8020/hbase</value>
    </property>
    <property>
        <name>hbase.cluster.distributed</name>
        <value>true</value>
    </property>
    <property>
        <name>hbase.regionserver.handler.count</name>
        <value>200</value>
    </property>
    <property>
        <name>hbase.tmp.dir</name>
        <value>{{ pillar.cdh4.hbase.tmp_dir }}</value>
    </property>
    <property>
        <name>dfs.replication</name>
        <value>{{ pillar.cdh4.hbase.replication }}</value>
    </property>
    <!-- zookeeper properties -->
    <property>
        <name>zookeeper.session.timeout</name>
        <value>60000</value>
    </property>
    <property>
        <name>hbase.zookeeper.property.dataDir</name>
        <value>{{ pillar.cdh4.zookeeper.data_dir }}</value>
    </property>
    <property>
        <name>hbase.zookeeper.property.maxClientCnxns</name>
        <value>300</value>
    </property>
    <property>
      <!-- set to 100G to discourage splitting -->
        <name>hbase.hregion.max.filesize</name>
        <value>107374182400</value>
    </property>
    <!--property>
        <name>hbase.hstore.compaction.max</name>
        <value>5</value>
    </property-->
    <property>
      <!-- tell the master to perform fresh assignments on startup, this avoids problems with ephemeral IP addresses in EC2 -->
        <name>hbase.master.startup.retainassign</name>
        <value>false</value>
    </property>
</configuration>
